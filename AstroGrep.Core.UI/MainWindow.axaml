<Window
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:dd="clr-namespace:AstroGrep.Core.UI;assembly=AstroGrep.Core.UI"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  Icon="/Assets/search.ico"
  x:Class="AstroGrep.Core.UI.MainWindow"
  Title="AstroGrep Lite">
  <Design.DataContext>
    <dd:MainWindowViewModel />
  </Design.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0">Welcome to AstroGrep Lite!</TextBlock>
    <TextBox Grid.Row="1" AcceptsReturn="True" Text="{Binding SelectedFolder, Mode=TwoWay}"></TextBox>
    <Button Grid.Row="2" Command="{Binding OnSelectFolder}">
      <Panel>
        <Image Source="/Assets/folder.png" Height="20" Width="20"></Image>
      </Panel>
    </Button>
    <Button Grid.Row="3" Command="{Binding OnSearch}">Search</Button>
  </Grid>
</Window>